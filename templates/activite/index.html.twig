{% extends 'base.html.twig' %}

{% block title %}Liste des Activit√©s{% endblock %}

{% block body %}
<div class="container mt-4">

    {# --- ZONE DE FILTRE --- #}
    <div class="card mb-4 bg-light">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                {# Filtre par Type #}
                <div class="col-md-4">
                    <label class="form-label fw-bold">Filtrer par Type</label>
                    <select name="type" class="form-select">
                        <option value="">-- Tous les types --</option>
                        {% for type in types %}
                            <option value="{{ type.id }}" {{ currentType == type.id ? 'selected' : '' }}>
                                {{ type.lib }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                {# Filtre par Difficult√© #}
                <div class="col-md-4">
                    <label class="form-label fw-bold">Filtrer par Difficult√©</label>
                    <select name="difficulte" class="form-select">
                        <option value="">-- Toutes les difficult√©s --</option>
                        
                        {# üëá C'est ici qu'on change les VALUE #}
                        {# Value = 1 (ce que la base comprend) | Texte = D√©butant (ce que l'humain voit) #}
                        
                        <option value="1" {{ currentDifficulte == 1 ? 'selected' : '' }}>D√©butant</option>
                        <option value="2" {{ currentDifficulte == 2 ? 'selected' : '' }}>Interm√©diaire</option>
                        <option value="3" {{ currentDifficulte == 3 ? 'selected' : '' }}>Expert</option>
                        
                    </select>
                </div>

                {# Boutons #}
                <div class="col-md-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel"></i> Filtrer
                    </button>
                    <a href="{{ path('app_activite_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    {# --- TABLEAU DES R√âSULTATS --- #}
    <div class="card mb-4 shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center bg-white py-3">
            <h5 class="mb-0 text-primary"><i class="bi bi-activity me-2"></i> Activit√©s disponibles</h5>
            <a href="{{ path('app_activite_new') }}" class="btn btn-success btn-sm">
                <i class="bi bi-plus-circle"></i> Nouvelle activit√©
            </a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-uppercase small">Nom</th>
                        <th class="text-uppercase small">Type</th>
                        <th class="text-uppercase small">Difficult√©</th>
                        <th class="text-uppercase small text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>  
                    {% for activite in activites %}
                        <tr>
                            <td class="fw-bold">{{ activite.nom }}</td>
                            <td>
                                {% if activite.type %}
                                    <span class="badge bg-info text-dark">{{ activite.type.lib }}</span>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>{{ activite.nvDifficulte }}</td>
                            <td class="text-end">
                                <a href="{{ path('app_activite_show', {'id': activite.id}) }}" class="btn btn-sm btn-ghost text-primary">
                                    <i class="bi bi-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_activite_edit', {'id': activite.id}) }}" class="btn btn-sm btn-ghost text-warning">
                                    <i class="bi bi-pencil"></i> Modifier
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-muted py-5">
                                <i class="bi bi-search fs-1 d-block mb-2"></i>
                                Aucun r√©sultat trouv√© pour cette recherche.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}