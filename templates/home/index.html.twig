{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-5 text-center">Bienvenue sur l'application</h1>

    <div class="row justify-content-center">
        
        <div class="col-12 col-sm-6 col-md-4 mb-4">
            <a href="{{ path('app_membre_index') }}" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-zoom border-0" style="background-color: #f8f9fa;">
                    <div class="card-body d-flex align-items-center justify-content-center p-5">
                        <i class="bi bi-people text-primary me-3" style="font-size: 3.5rem;"></i>
                        <h3 class="card-title text-dark fw-bold m-0">Membres</h3>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-md-4 mb-4">
            <a href="{{ path('app_activite_index') }}" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-zoom border-0" style="background-color: #f8f9fa;">
                    <div class="card-body d-flex align-items-center justify-content-center p-5">
                        <i class="bi bi-activity text-danger me-3" style="font-size: 3.5rem;"></i>
                        <h3 class="card-title text-dark fw-bold m-0">Activités</h3>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-md-4 mb-4">
            <a href="{{ path('app_roles_index') }}" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-zoom border-0" style="background-color: #f8f9fa;">
                    <div class="card-body d-flex align-items-center justify-content-center p-5">
                        <i class="bi bi-people-fill text-success me-3" style="font-size: 3.5rem;"></i>
                        <h3 class="card-title text-dark fw-bold m-0">Rôles</h3>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-md-4 mb-4">
            <a href="{{ path('app_session_index') }}" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-zoom border-0" style="background-color: #f8f9fa;">
                    <div class="card-body d-flex align-items-center justify-content-center p-5">
                        <i class="bi bi-calendar-check text-warning me-3" style="font-size: 3.5rem;"></i>
                        <h3 class="card-title text-dark fw-bold m-0">Sessions</h3>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-md-4 mb-4">
            <a href="{{ path('app_type_index') }}" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-zoom border-0" style="background-color: #f8f9fa;">
                    <div class="card-body d-flex align-items-center justify-content-center p-5">
                        {# text-info pour le Cyan/Bleu clair #}
                        <i class="bi bi-tags text-info me-3" style="font-size: 3.5rem;"></i>
                        <h3 class="card-title text-dark fw-bold m-0">Types</h3>
                    </div>
                </div>
            </a>
        </div>

    </div>
</div>

<style>
    .hover-zoom {
        transition: transform 0.2s, box-shadow 0.2s;
        cursor: pointer;
    }
    .hover-zoom:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
        background-color: #fff!important;
        border: 1px solid #dee2e6!important;
    }
</style>
{% endblock %}