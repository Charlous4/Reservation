{{ form_start(form, {'attr': {'class': 'row g-3'}}) }}

    {# Nom #}
    <div class="col-md-6">
        {{ form_row(form.nom, {
            label: 'Nom',
            attr: {'class': 'form-control', 'placeholder': 'Ex : Dupont'}
        }) }}
    </div>

    {# Prénom #}
    <div class="col-md-6">
        {{ form_row(form.prenom, {
            label: 'Prénom',
            attr: {'class': 'form-control', 'placeholder': 'Ex : Charles'}
        }) }}
    </div>

    {# Identifiant #}
    <div class="col-md-6">
        {{ form_row(form.login, {
            label: 'Identifiant',
            attr: {'class': 'form-control', 'placeholder': 'Nom d’utilisateur'}
        }) }}
    </div>

    {# Mot de passe #}
    <div class="col-md-6">
        {{ form_row(form.mdp, {
            label: 'Mot de passe',
            attr: {'class': 'form-control', 'placeholder': '********'}
        }) }}
    </div>

    {# Email #}
    <div class="col-md-6">
        {{ form_row(form.mail, {
            label: 'Email',
            attr: {'class': 'form-control', 'placeholder': 'exemple@mail.com'}
        }) }}
    </div>

    {# Téléphone #}
    <div class="col-md-6">
        {{ form_row(form.numTel, {
            label: 'Téléphone',
            attr: {'class': 'form-control', 'placeholder': '06 12 34 56 78'}
        }) }}
    </div>

    {# Rôle #}
    <div class="col-12">
        {{ form_row(form.role, {
            label: 'Rôle',
            attr: {'class': 'form-select'}
        }) }}
    </div>

    {# Actions #}
    <div class="d-flex justify-content-end gap-2 mt-2">
        <a href="{{ path('app_membre_index') }}" class="btn btn-ghost">
            <i class="bi bi-x-circle"></i> Annuler
        </a>
        <button class="btn btn-primary">
            <i class="bi bi-check-circle"></i> {{ button_label|default('Ajouter') }}
        </button>
    </div>

{{ form_end(form) }}
