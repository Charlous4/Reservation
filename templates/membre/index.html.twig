{% extends 'base.html.twig' %}

{% block title %}Liste des Membres{% endblock %}

{% block body %}
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-people me-2"></i> Membres</h5>
        <a href="{{ path('app_membre_new') }}" class="btn btn-primary">
            <i class="bi bi-person-plus"></i> Nouveau membre
        </a>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th class="text-muted text-uppercase small">Nom</th>
                    <th class="text-muted text-uppercase small">Prénom</th>
                    <th class="text-muted text-uppercase small">Rôle</th>
                    <th class="text-muted text-uppercase small text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for membre in membres %}
                    <tr>
                        <td class="fw-semibold">{{ membre.nom }}</td>
                        <td class="fw-semibold">{{ membre.prenom }}</td>
                        <td>{{ membre.role.getLib() }}</td>
                        <td class="text-end">
                            <a href="{{ path('app_membre_show', {'id': membre.id}) }}" class="btn btn-ghost">
                                <i class="bi bi-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_membre_edit', {'id': membre.id}) }}" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center text-muted py-4">
                            <i class="bi bi-folder-x fs-4 me-2"></i> Aucun membre trouvé
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
