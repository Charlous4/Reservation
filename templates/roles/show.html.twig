{% extends 'base.html.twig' %}

{% block title %}Détails du Rôle{% endblock %}

{% block body %}
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-person-badge me-2"></i> Rôle #{{ role.id }}</h5>
        <div class="d-flex gap-2">
            <a href="{{ path('app_roles_edit', {'id': role.id}) }}" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            {{ include('roles/_delete_form.html.twig') }}
            <a href="{{ path('app_roles_index') }}" class="btn btn-ghost">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </div>
    </div>
    <div class="card-body">
        <h6 class="text-muted">Libellé</h6>
        <p class="fw-semibold">{{ role.lib }}</p>
    </div>
</div>
{% endblock %}
