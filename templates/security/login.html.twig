{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg p-4" style="width: 420px; border-radius: 16px;">

        <h2 class="text-center mb-4 fw-bold">Connexion</h2>

        {# Message d’erreur #}
        {% if error %}
            <div class="alert alert-danger text-center">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {# Déjà connecté #}
        {% if app.user %}
            <div class="alert alert-info text-center mb-3">
                Déjà connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>.
                <br>
                <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}

        <form method="post" class="mt-3">

            <div class="mb-3">
                <label for="inputLogin" class="form-label fw-semibold">Identifiant</label>
                <input 
                    type="text"
                    value="{{ last_username }}"
                    name="login"
                    id="inputLogin"
                    class="form-control form-control-lg"
                    autocomplete="username"
                    required
                    autofocus
                >
            </div>

            <div class="mb-3">
                <label for="inputPassword" class="form-label fw-semibold">Mot de passe</label>
                <input 
                    type="password"
                    name="password"
                    id="inputPassword"
                    class="form-control form-control-lg"
                    autocomplete="current-password"
                    required
                >
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" name="_remember_me" id="rememberMe">
                <label class="form-check-label" for="rememberMe">
                    Se souvenir de moi
                </label>
            </div>

            <button class="btn btn-primary w-100 py-2 fw-bold" style="border-radius: 10px;">
                Se connecter
            </button>
        </form>

    </div>
</div>
{% endblock %}
