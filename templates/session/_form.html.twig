{{ form_start(form, {'attr': {'class': 'row g-3'}}) }}

    {# Activité #}
    <div class="col-md-6">
        {{ form_row(form.activite, {
            label: 'Activité',
            attr: {'class': 'form-select'}
        }) }}
    </div>

   {# Entraîneur #}
    <div class="col-md-6">
        {{ form_row(form.entraineur, {
            label: 'Entraîneur assigné',
            attr: {'class': 'form-select'}
        }) }}
    </div>

    {# Nombre de places #}
    <div class="col-12">
        {{ form_row(form.nbPlace, {
            label: 'Nombre de places',
            attr: {'class': 'form-control', 'min': 1, 'placeholder': 'Ex : 12'}
        }) }}
    </div>

    {# Dates #}
    <div class="col-md-6">
        {{ form_row(form.dateDeb, {
            label: 'Date de début',
            attr: {'class': 'form-control'}
        }) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.dateFin, {
            label: 'Date de fin',
            attr: {'class': 'form-control'}
        }) }}
    </div>

    {# Heures #}
    <div class="col-md-6">
        {{ form_row(form.heureDeb, {
            label: 'Heure de début',
            attr: {'class': 'form-control'}
        }) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.heureFin, {
            label: 'Heure de fin',
            attr: {'class': 'form-control'}
        }) }}
    </div>

    {# Actions #}
    <div class="d-flex justify-content-end gap-2 mt-4">
        <a href="{{ path('app_session_index') }}" class="btn btn-ghost">
            <i class="bi bi-x-circle"></i> Annuler
        </a>
        <button class="btn btn-primary">
            <i class="bi bi-check-circle"></i> {{ button_label|default('Ajouter') }}
        </button>
    </div>

{{ form_end(form) }}