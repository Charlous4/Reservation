{% extends 'base.html.twig' %}

{% block title %}Sessions{% endblock %}

{% block body %}
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-calendar-check me-2"></i> Sessions disponibles</h5>
        <a href="{{ path('app_session_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Nouvelle session
        </a>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th class="text-muted text-uppercase small">Activité</th>
                    <th class="text-muted text-uppercase small text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for session in sessions %}
                    <tr>
                        <td class="fw-semibold">{{ session.activite.nom }}</td>
                        <td class="text-end">
                            <a href="{{ path('app_session_show', {'id': session.id}) }}" class="btn btn-ghost">
                                <i class="bi bi-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_session_edit', {'id': session.id}) }}" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" class="text-center text-muted py-4">
                            <i class="bi bi-calendar-x fs-4 me-2"></i> Aucune session enregistrée
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
