{% extends 'base.html.twig' %}

{% block title %}Détails de la Session{% endblock %}

{% block body %}
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-calendar-event me-2"></i> Session #{{ session.id }}</h5>
        <div class="d-flex gap-2">
            <a href="{{ path('app_session_edit', {'id': session.id}) }}" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            {{ include('session/_delete_form.html.twig') }}
            <a href="{{ path('app_session_index') }}" class="btn btn-ghost">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row g-4">
            <div class="col-md-6">
                <h6 class="text-muted">Activité</h6>
                <p class="fw-semibold">{{ session.activite.nom }}</p>
            </div>
            <div class="col-md-6">
                <h6 class="text-muted">Nombre de places</h6>
                <p>{{ session.nbPlace }}</p>
            </div>
            <div class="col-md-6">
                <h6 class="text-muted">Date</h6>
                <p>
                    Du {{ session.dateDeb|date('d/m/Y') }} au {{ session.dateFin|date('d/m/Y') }}
                </p>
            </div>
            <div class="col-md-6">
                <h6 class="text-muted">Heure</h6>
                <p>
                    {{ session.heureDeb|date('H:i') }} - {{ session.heureFin|date('H:i') }}
                </p>
            </div>
            <div class="col-12">
                <h6 class="text-muted">Entraîneur</h6>
                
                {# On vérifie si un entraineur est assigné (non null) #}
                {% if session.entraineur %}
                    <p class="fw-semibold">
                        <i class="bi bi-person-badge me-1"></i> 
                        {{ session.entraineur.nom }} {{ session.entraineur.prenom }}
                    </p>
                {% else %}
                    <p class="text-muted">
                        <i class="bi bi-exclamation-circle me-1"></i> 
                        Aucun entraîneur assigné
                    </p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
