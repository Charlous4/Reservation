{% extends 'base.html.twig' %}

{% block title %}Liste des Types{% endblock %}

{% block body %}
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-tags me-2"></i> Types</h5>
        <a href="{{ path('app_type_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouveau type
        </a>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th class="text-muted text-uppercase small">Libellé</th>
                    <th class="text-muted text-uppercase small text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for type in types %}
                    <tr>
                        <td class="fw-semibold">{{ type.lib }}</td>
                        <td class="text-end">
                            <a href="{{ path('app_type_show', {'id': type.id}) }}" class="btn btn-ghost">
                                <i class="bi bi-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_type_edit', {'id': type.id}) }}" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" class="text-center text-muted py-4">
                            <i class="bi bi-folder-x fs-4 me-2"></i> Aucun type trouvé
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
